		Scanner sc = new Scanner(System.in);
		System.out.print("가위 (1) / 바위 (2) / 보 (3) 선택 : ");
		
		int user;
		int com;
		
		user = sc.nextInt();
		com = (int) (Math.random()*3)+1;
		
		String regex = "^[1-3]$";
		
		if (!String.valueOf(user).matches(regex)) {
			System.out.println("1부터 3까지만 입력하세요");
			return;
		} // if
		
		System.out.printf("%d %d\n",user,com);

		
		if (user == 1) {
